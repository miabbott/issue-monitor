{
  "name": "bug-tracker",
  "searchPhrases": [
    "critical bug",
    "urgent fix needed",
    "production issue"
  ],
  "excludedRepos": [
    "example/demo-repo",
    "testing/sandbox"
  ],
  "excludedOrgs": [
    "test-org",
    "demo-organization"
  ],
  "lookbackHours": 12,
  "notifications": {
    "githubIssues": {
      "enabled": true
    },
    "slack": {
      "enabled": true,
      "webhookUrl": "",
      "channel": "#bug-alerts",
      "username": "Bug Tracker",
      "iconEmoji": ":bug:"
    }
  }
}